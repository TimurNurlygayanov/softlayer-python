{% comment %}
  Creates menu links for any page with "layout: default" front-matter
{% endcomment %}

{% assign nav-items = site.pages %}
{% for node in nav-items %}
  {% if node.header != null %}
    {% if node.layout == "default" %}

    <a class="menu-nav-item{% if page.url == node.url %} active {% endif %}" href="{{site.baseurl}}{{node.url}}"><i class="fa fa-chevron-right"></i>{{node.header}}</a>

    {% endif %}
  {% endif %}
{% endfor %}
